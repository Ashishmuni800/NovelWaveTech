<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Novel Wave Tech</title>
    <!-- External CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutresponsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NovelWaveTechUI.styles.css" asp-append-version="true" />
    <style>
        .rotate {
            transition: transform 0.3s ease;
        }

            .rotate.down {
                transform: rotate(0deg);
            }

            .rotate.up {
                transform: rotate(180deg);
            }

        .toggle-icon {
            transition: transform 0.3s ease, opacity 0.2s ease;
            display: inline-block;
        }

        .rotate-anim {
            transform: rotate(180deg);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar" aria-label="Main Navigation" style="display: none;">
        <div class="m-lg-4 mt-0 mrl">
            <img src="/images/logo.png" alt="Novel Wave Tech" />
        </div>
        <a href="javascript:void(0);" id="toggleSidebar" class="mb-3">
            <i class="fa fa-bars me-2"></i><span>Menu</span>
        </a>
        <div class="px-3 pb-2">
            <input type="text" class="form-control form-control-sm" placeholder="Search..." />
        </div>

        <a id="navDashboard" href="/Home/Index"><i class="fa fa-chart-pie"></i><span>Dashboard</span></a>

        <hr class="bg-secondary" />

        <!-- ✅ Users Section -->
        <div class="accordion" id="sidebarAccordion">

            <!-- Users -->
            <div class="accordion-item border-0 bg-transparent">
                <a class="d-flex align-items-center justify-content-between collapsed px-2"
                   data-bs-toggle="collapse" href="#usersMenu"
                   role="button" aria-expanded="false" aria-controls="usersMenu" id="navProtected2" style="display:none;">
                    <span><i class="fa fa-users"></i><span>Administration</span></span>
                    <!-- custom icon -->
                    <i class="fa-regular fa-circle-plus toggle-icon"></i>
                </a>
                <div class="collapse ps-4" id="usersMenu" data-bs-parent="#sidebarAccordion">
                    <a id="navProtected4" href="/Home/Userlist" style="display:none;">
                        <i class="fa fa-list"></i><span> Users List</span>
                    </a>
                    <a id="navProtected5" href="/Home/User" style="display:none;" class="d-block">
                        <i class="fa fa-list"></i><span>Users</span>
                    </a>
                    <a id="navProtected" href="/Home/Proctected" style="display:none;">
                        <i class="fa fa-lock"></i><span>Protected</span>
                    </a>

                        <!-- Administration -->
                    <div class="accordion" id="adminAccordion" style="display:none;">
                            <div class="accordion-item border-0 bg-transparent">
                                <a class="d-flex align-items-center justify-content-between collapsed px-2"
                                   data-bs-toggle="collapse" href="#adminMenu"
                                   role="button" aria-expanded="false" aria-controls="adminMenu" id="navAdminToggle" style="display:none;">
                                    <span><i class="fa fa-user-shield"></i><span>Manage Roles</span></span>
                                    <!-- custom icon -->
                                    <i class="fa-regular fa-circle-plus toggle-icon"></i>
                                </a>
                                <div class="collapse ps-4" id="adminMenu" data-bs-parent="#usersMenu">
                                    <a id="navProtected3" href="/Admin/Index" style="display:none;">
                                    <i class="fa fa-user-cog"></i><span>Manage Roles</span>
                                    </a>
                                    <a href="/Admin/Roles" style="display:none;" id="navRoles">
                                        <i class="fa fa-user-tag"></i><span> Roles</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- End Administration -->

                    </div>
                </div>
            </div>


        <hr class="bg-secondary" />

        <small class="px-3 text-uppercase text-muted">Tools</small>
        <a href="#" id="toggleTheme"><i class="fa fa-moon" id="themeIcon"></i><span>Toggle Theme</span></a>
        <a href="/Home/Settings"><i class="fa fa-cogs"></i><span>Settings</span></a>
        <a href="/Home/Help"><i class="fa fa-question-circle"></i><span>Help</span></a>
    </nav>


    <!-- ✅ Sidebar Overlay for Mobile -->
    <div id="sidebarOverlay" class="sidebar-overlay"></div>

    <!-- Topbar as Responsive Navbar -->
    <nav id="topbar" class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" style="display: none;">
        <div class="container-fluid">
            <!-- Sidebar Toggle -->
            <button class="btn btn-primary me-2" id="toggleSidebar">
                <i class="fa fa-bars"></i>
            </button>

            <a class="navbar-brand text-white" href="#">Novel Wave Tech</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarUserMenu"
                aria-controls="navbarUserMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarUserMenu">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user-circle me-1"></i>
                            <span id="userNameDisplay">User</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Home/Profile"><i class="fa fa-id-card me-1"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="/Home/PasswordChange"><i class="fa fa-key me-1"></i>Change Password</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" id="dropdownLogout"><i class="fa fa-sign-out-alt me-1"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="content" class="content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer text-center text-muted">
        <div class="container">
            &copy; 2025 - Novel Wave Tech - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const sidebar = document.getElementById('sidebar');
        const topbar = document.getElementById('topbar');
        const content = document.getElementById('content');
        const overlay = document.getElementById('sidebarOverlay');

        fetch(`/Home/GetToken`, {
            method: 'GET',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(res => {
            if (!res.ok) throw new Error('Invalid token');
            return res.json();
        })
        .then(data => {
            document.getElementById('navProtected2').style.display = 'block';
            //document.getElementById('userNameDisplay').innerText = `Welcome, ${data.Id || 'User'}!`;
            console.log(data.Id)
            sidebar.style.display = 'block';
            topbar.style.display = 'block';
            //console.log(data.id);
           // console.log(data.roles[0]);

            // if(data.roles[0]=="Admin"){
            //     document.getElementById('navProtected3').style.display = 'block';
            //     document.getElementById('hide').style.display = 'block';
            //     document.getElementById('navProtected4').style.display = 'block';
            //     document.getElementById('hide2').style.display = 'block';
            // }

            document.getElementById('navProtected5').style.display = 'block';
                                if (data.roles.includes("Admin")) {
            document.getElementById('navProtected').style.display = 'block';
            document.getElementById('navAdminToggle').style.display = 'block';
            document.getElementById('navProtected3').style.display = 'block';
            document.getElementById('navProtected4').style.display = 'block';
            document.getElementById('adminAccordion').style.display = 'block';
            document.getElementById('navRoles').style.display = 'block';

            // ✅ Auto-expand Users + Admin
            const usersMenu = document.getElementById("usersMenu");
            const adminMenu = document.getElementById("adminMenu");

            new bootstrap.Collapse(usersMenu, { toggle: true });
            new bootstrap.Collapse(adminMenu, { toggle: true });
        }


        })
        .catch(() => {
            document.getElementById('navProtected').style.display = 'none';
            document.getElementById('navProtected2').style.display = 'none';
            sidebar.style.display = 'none';
            topbar.style.display = 'none';
        });

        fetch(`/Home/getusername`, {
            method: 'GET',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(res => {
            if (!res.ok) throw new Error('Invalid token');
            return res.json();
        })
        .then(data => {
            document.getElementById('userNameDisplay').innerText = `Welcome, ${data.username || 'User'}!`;
            console.log(data.username);
        })
        .catch(() => {
            console.log(data.Error);
        });

        // Logout
        document.getElementById('dropdownLogout').addEventListener('click', () => {
            if (!confirm('Are you sure you want to log out?')) return;
            fetch('/Home/Logout', {
                method: 'GET',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(r => {
                if (r.ok) {
                    alert('User logged out successfully.');
                    window.location.href = '/Home/Login';
                } else {
                    alert('Logout failed.');
                }
            })
            .catch(() => alert('Error logging out.'));
        });

        // Sidebar toggle
        document.querySelectorAll('#toggleSidebar').forEach(button => {
            button.addEventListener('click', () => {
                if (window.innerWidth < 768) {
                    sidebar.classList.toggle('mobile-visible');
                    overlay.classList.toggle('active');
                } else {
                    sidebar.classList.toggle('collapsed');
                    content.classList.toggle('collapsed');
                    topbar.classList.toggle('collapsed');
                }
            });
        });

        // Hide sidebar when overlay is clicked
        overlay.addEventListener('click', () => {
            sidebar.classList.remove('mobile-visible');
            overlay.classList.remove('active');
        });

        // Theme toggle
        document.getElementById('toggleTheme').addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Swap icon
            document.getElementById('themeIcon').classList.toggle('fa-moon');
            document.getElementById('themeIcon').classList.toggle('fa-sun');
        });
                        // Handle toggle icons (circle-plus / circle-minus with animation)
        document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(toggle => {
            const targetSelector = toggle.getAttribute('href');
            const target = document.querySelector(targetSelector);
            const icon = toggle.querySelector('.toggle-icon');

            if (!target || !icon) return;

            // Initialize icon state
            if (target.classList.contains('show')) {
                icon.classList.remove('fa-circle-plus');
                icon.classList.add('fa-circle-minus', 'rotate-anim');
            } else {
                icon.classList.remove('fa-circle-minus', 'rotate-anim');
                icon.classList.add('fa-circle-plus');
            }

            // When expanded
            target.addEventListener('shown.bs.collapse', () => {
                icon.classList.remove('fa-circle-plus');
                icon.classList.add('fa-circle-minus');
                icon.classList.add('rotate-anim');
            });

            // When collapsed
            target.addEventListener('hidden.bs.collapse', () => {
                icon.classList.remove('fa-circle-minus', 'rotate-anim');
                icon.classList.add('fa-circle-plus');
            });
        });



    </script>
</body>
</html>
